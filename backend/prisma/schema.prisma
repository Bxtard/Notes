generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title      String
  content    String
  isArchived Boolean    @default(false)
  categories Category[]
}

model Category {
  title String @id
  notes Note[]
}
